<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DialogAnimationUpAndDown">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogAnimationLeftAndRight">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_right</item>
    </style>


    <color name="colorGray">#9E9E9E</color>
</resources>
